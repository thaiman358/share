<div class="fh5co-loader"></div>
	
	<div id="page">
	<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(assets/hero_1.jpeg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<div class="display-t js-fullheight">
						<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<h1>Read the articles</h1>
							<h2><%= link_to "Your Likes", favarticles_path %></h2>
							<!--<h2>Brought to you by <a href="http://freehtml5.co/" target="_blank">freehtml5.co</a></h2>-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
	
	<div id="fh5co-blog" class="fh5co-section">
		<div class="container">
			<div class="row">
				<% @articles.each do |article| %>
				<div class="col-md-4">
					<div class="fh5co-blog animate-box">
						<div class="blog-text">
               			  <% if @reads.find_by(article_id: article.id) %>
							<h3><a href="#">
							<%= article.title %></a></h3>
							<p><%= article.content %></p>
						  
						  <% @favarticle = current_user.favarticles.find_by(article_id: article.id)%>
                          <% if @favarticle.present? %>
                            <%= button_to 'UnLike', favarticle_path(id: @favarticle.id), :method => :delete, class: 'btn btn-danger' %>
                          <% else %>
                            <%= button_to 'Like', favarticles_path(article_id: article.id), :method => :post, class: 'btn btn-primary' %>
                          <% end %>
				          <% end %>							
						</div> 
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
</div>
</div>