<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(assets/hero_1.jpeg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<div class="display-t js-fullheight">
						<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<h1>Your Preference</h1>
							<p>Please register your preferences</p>
							<!--<h2>Brought to you by <a href="http://freehtml5.co/" target="_blank">freehtml5.co</a></h2>-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
	<div id="fh5co-about" class="fh5co-section">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-push-1 animate-box">
					<div class="section-heading">
						
                       <%= form_with(model:@preference, local: true) do |f| %>
                       
                         <%= f.hidden_field :email, value: current_user.email %>
	
						<div class="row form-group">
    	                	<div class="col-md-12">
		                    	<%= f.label :preference %>
                        		<%= f.text_area :preference, class:"form-control" %>
            				</div>
            			</div>

						<div class="row form-group">
    	                	<div class="col-md-12">
		                    	<%= f.label :unpreference %>
                        		<%= f.text_area :unpreference, class:"form-control" %>
            				</div>
            			</div>


						<div class="row form-group">
    	                	<div class="col-md-12">
  								<%= f.submit "registration" , class:"btn btn-primary btn-outline btn-lg" %>
  							</div>
            			</div>

                       <% end %>

					</div>
				</div>
			</div>
		</div>
	</div>
