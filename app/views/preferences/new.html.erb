	<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(assets/hero_1.jpeg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<div class="display-t js-fullheight">
						<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<h1>Ask Client's Preference</h1>
							<!--<h2>Brought to you by <a href="http://freehtml5.co/" target="_blank">freehtml5.co</a></h2>-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
	<div id="fh5co-about" class="fh5co-section">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-push-1 animate-box">
					<div class="section-heading">
                    	<%= form_with(model:@preference, local: true) do |f| %>
                    	
                    	<div class="row form-group">
                       		<div class="col-md-12">
  	                     		<%= f.label :"User name" %>
    	 	                   	<%= f.text_field :user_name, class:"form-control"  %>
            				</div>
            			</div>

                    	<div class="row form-group">
                       		<div class="col-md-12">
				                <%= f.label :"Client's name" %>
								<%= f.text_field :client_name, class:"form-control"  %>
            				</div>
            			</div>

                    	<div class="row form-group">
                       		<div class="col-md-12">
                    			<%= f.label :"Client's email" %>
                        		<%= f.email_field :email, class:"form-control"  %>
                        		<%= f.hidden_field :preference %>
            				</div>
            			</div>

                    	<div class="row form-group">
                       		<div class="col-md-12">
                    			<%= f.submit "send", class:"btn btn-primary btn-outline btn-lg"  %>
            				</div>
            			</div>
            		           
                       <% end %>

					</div>
				</div>
			</div>
		</div>
	</div>
