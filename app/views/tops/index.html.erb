						   					<div class="desc">
						   						
													<h2><%= restaurant1.name%></h2>
													<p><%= restaurant1.overview%></p>
													<%= link_to "Show", restaurant_path(restaurant1[:id]), :method=>:get, class:"btn btn-primary btn-outline"%>
													
													<!--<p><a href="restaurant_path(restaurant[:id])" class="btn btn-primary btn-outline">Learn More</a></p>-->
						   					</div>
						   				</div>
						   			</div>
						   		</div>
					   		</div>
					   	</li>
					   	<%end%>
					   	
					   	<% @restaurants2.each do |restaurant2| %>
					   	<li style="background-image: url(<%= restaurant2.image %>);">
					   		<div class="overlay-gradient"></div>
					   		<div class="container-fluid">
					   			<div class="row">
						   			<div class="col-md-12 col-md-offset-0 col-md-pull-10 slider-text slider-text-bg">
						   				<div class="slider-text-inner">
						   					<div class="desc">
						   						<!--#最新行から2番目のみをもって来たい-->
													
													<h2><%= restaurant2.name%></h2>
													<p><%= restaurant2.overview%></p>
													<%= link_to "Show", restaurant_path(restaurant2[:id]), :method=>:get, class:"btn btn-primary btn-outline"%>
						   						
						   					</div>
						   				</div>
						   			</div>
						   		</div>
					   		</div>
					   	</li>
					   	<%end%>
					   	
					   	<% @restaurants3.each do |restaurant3| %>
					   	<li style="background-image: url(<%= restaurant3.image %>);">
					   		<div class="overlay-gradient"></div>
					   		<div class="container-fluid">
