													<p><%= restaurant3.overview%></p>
													<%= link_to "Show", restaurant_path(restaurant3[:id]), :method=>:get, class:"btn btn-primary btn-outline"%>
						   						
						   					</div>
						   				</div>
						   			</div>
						   		</div>
					   		</div>
					   	</li>
					   	<%end%>
					   	
					  	</ul>
				  	</div>
				</aside>
				</div>
			</div>
		</div>
	</div>


