                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-md-12">
                    <label for="email">Internal</label>
                    <input type="radio" class="form-control" id="email" value='1' name='arttype'>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-md-12">
                    <label for="email">External / First time</label>
                    <input type="radio" class="form-control" id="email" value='2' name='arttype'>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-md-12">
                    <label for="email">External / 2~3 times</label>
                    <input type="radio" class="form-control" id="email" value='3' name='arttype'>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-md-12">
                    <label for="email">External / Over 4 times</label>
                    <input type="radio" class="form-control" id="email" value='4' name='arttype'>
                  </div>
                </div>
                <div class="row form-group">
                  <div class="col-md-12">
                    <% restaurant_id = @restaurant.id %>
                    <input id="restaurant_id" type="hidden" name="restaurant_id" value=>
