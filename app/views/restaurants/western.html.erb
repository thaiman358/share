	<div class="fh5co-loader"></div>
	
	<div id="page">

	<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(/assets/western_food.png);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<div class="display-t js-fullheight">
						<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<h1><em>Western</em> Restaurants</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>

	<div id="fh5co-featured-menu" class="fh5co-section">
		<div class="container">
			<div class="row">
				<% @restaurants.each do |restaurant| %>
  				<% if restaurant.category == 2 %>
  					<div class="col-md-3 col-sm-6 col-xs-6 col-xxs-12 fh5co-item-wrap">
  						<div class="fh5co-item animate-box">
  							<!--<img src="assets/gallery_1.jpeg" class="img-responsive" alt="Free Restaurant Bootstrap Website Template by FreeHTML5.co">-->
  							<p><%= image_tag restaurant.image, :class => "img-responsive" %></p>
  							<div class="blog-text">
  							<h3><%= truncate(restaurant.name, length:10) %></h3>
  							<span class="fh5co-price"><%= restaurant.price%></span>
							<p><%= truncate(restaurant.overview, length:50) %></p>
							<%= link_to "Show", restaurant_path(restaurant[:id]), :method=>:get, class:"btn btn-primary btn-outline"%>
							</div>
  						</div>
  					</div>
  				<% end %>
				<% end %>
			</div>
		</div>
	</div>