<div class="fh5co-loader"></div>

<div id="page">

<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(assets/hero_1.jpeg);" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="container">
		<div class="row">
			<div class="col-md-12 text-center">
				<div class="display-t js-fullheight">
					<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
						<h1><em>ALL</em> Restaurants</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
</header>

<div id="fh5co-featured-menu" class="fh5co-section">
	<div class="container">
		<div class="row">
			<% @restaurants.each do |restaurant| %>	
      		<% if visit = @visits.find_by(restaurant_id: restaurant.id) %>
				<div class="col-md-3 col-sm-6 col-xs-6 col-xxs-12 fh5co-item-wrap">
					<div class="fh5co-item animate-box">
						<!--<img src="assets/gallery_1.jpeg" class="img-responsive">-->
						<p><%= image_tag restaurant.image, :class => "img-responsive" %></p>
						<h3><%= truncate(restaurant.name, length:10) %></h3>
						<span class="fh5co-price">
							<% category = 0 %>
							<% case restaurant.category %>
								<% when 1 then%>
								<%= "和食" %>
								<% when 2 then%>
								<%= "洋食" %>
								<% when 3 then%>
								<%= "イタリアン" %>
								<% when 4 then%>
								<%= "フレンチ" %>
								<% when 5 then%>
								<%= "中華" %>
								<% when 6 then%>
								<%= "その他" %>
							<% end %>
						</span>
						<span class="fh5co-price">Client Name: <%= visit.client_name %></span>
						<p><%= truncate(restaurant.overview, length:50) %></p>
						<%= link_to "Show", restaurant_path(restaurant[:id]), :method=>:get, class:"btn btn-primary btn-outline"%>
						<br>
					</div>
				</div>
			<% end %>
			<% end %>
		</div>
	</div>
</div>


