	<div class="fh5co-loader"></div>
	
	<div id="page">


	<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(assets/hero_1.jpeg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<div class="display-t js-fullheight">
						<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<h1>Visited Restaurant</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>


	<div id="fh5co-blog" class="fh5co-section">
			<div class="row">
				<div class="col-md-4">
					<div class="fh5co-blog animate-box">
						<a href="#" class="blog-bg" style="background-image: url(assets/gallery_1.jpeg);"></a>
						<div class="blog-text">
							<span class="posted_on">Feb. 15th 2016</span>
	                      	<% @restaurants.each do |restaurant| %>
	                      	<% if visit = @visits.find_by(restaurant_id: restaurant.id) %>
							<h3><a href="#"><%= restaurant.name %></a></h3>
							<p><%= restaurant.overview %></p>
							<p><%= restaurant.address %></p>
							<ul class="stuff">
							<% choices = ["和食","洋食","イタリアン","フレンチ","中華","その他"]%>
								<li><i class="icon-heart2"></i><%= choices[(restaurant.category-1)] %></li>
								<li><i class="icon-eye2"></i><%= restaurant.price %></li>
								<li><i class="icon-eye2"></i><%= visit.client_name %></li>
							</ul>
						</div> 
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>
<% end %>
