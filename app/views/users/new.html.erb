<header id="fh5co-header" class="fh5co-cover js-fullheight" role="banner" style="background-image: url(assets/hero_1.jpeg);" data-stellar-background-ratio="0.5">
		<div class="overlay"></div>
		<div class="container">
			<div class="row">
				<div class="col-md-12 text-center">
					<div class="display-t js-fullheight">
						<div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
							<h1>Sign up</h1>
							<!--<h2>Brought to you by <a href="http://freehtml5.co/" target="_blank">freehtml5.co</a></h2>-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</header>
	<div id="fh5co-about" class="fh5co-section">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-push-1 animate-box">
					<div class="section-heading">

				      	<%= form_for(@user) do |f| %>
				      		<div class="row form-group">
								<div class="col-md-12">
                        			<%= f.label :name %>
                        			<%= f.text_field :name, class:"form-control" %>
								</div>
							</div>
							
				      		<div class="row form-group">
								<div class="col-md-12">
                        			<%= f.label :email %>
                        			<%= f.email_field :email, class:"form-control"  %>
								</div>
							</div>

				      		<div class="row form-group">
								<div class="col-md-12">
			                        <%= f.label :password, "password *Needed 6 words more" %>
            			            <%= f.password_field :password, class:"form-control"  %>
								</div>
							</div>

				      		<div class="row form-group">
								<div class="col-md-12">
			                        <%= f.label :confirmation, "password confirmation" %>
            			            <%= f.password_field :password_confirmation, class:"form-control"  %>
								</div>
							</div>

				      		<div class="row form-group">
								<div class="col-md-12">
			   					    <% industries = [["商社", 1], ["メーカー", 2], ["小売", 3], ["金融", 4], ["インフラ", 5], ["物流", 6], ["建設・不動産", 7], ["サービス業", 8], ["広告・マスコミ", 9], ["ソフトウエア・通信", 10], ["公務員", 11]]%>            
            			            <%= f.label :industry %>
                        			<%= f.select :industry, industries, {}, {class: 'form-control'} %>
                        			<%#= f.select :industry, industries, {}, {class: 'form-control'}, :prompt => "選択してください" %>
								</div>
							</div>
							


				      		<div class="row form-group">
								<div class="col-md-12">
			  					    <% choices = [["取締役会長クラス", 1], ["取締役クラス", 2], ["執行役員クラス", 3], ["部長クラス", 4], ["課長クラス", 5], ["係長クラス", 6]]%>            
            			            <%= f.label :title %>
                        			<%= f.select :title, choices, {}, {class: 'form-control'} %>
								</div>
							</div>

				      		<div class="row form-group">
								<div class="col-md-12">
							    	<%= f.submit "Sign up", class:"btn btn-primary btn-outline btn-lg" %>
								</div>
							</div>


                        <%# detail1 = [["総合商社", 1], ["専門", 2]]%>
                        <%# detail2 = [["自動車メーカー", 1], ["食品メーカー", 2], ["消費財メーカー", 3], ["化粧品メーカー", 4], ["製薬メーカー", 5], ["家電メーカー", 6], ["素材メーカー", 7], ["その他", 8]]%>
                        <%# detail3 = [["総合小売", 1], ["衣料品", 2], ["ドラッグストア", 3], ["家電小売", 4], ["自動車小売", 5], ["通信小売", 6], ["その他", 7]]%>
                        <%# detail4 = [["銀行業", 1], ["証券業", 2], ["保険業", 3], ["その他", 4]]%>
                        <%# detail5 = [["電力・ガス", 1], ["鉄道", 2], ["鉱業・エネルギー", 3], ["その他", 4]]%>
                        <%# detail6 = [["倉庫・物流", 1],["陸運", 2], ["海運", 3], ["空運", 4], ["その他", 5]]%>
                        <%# detail7 = [["建設・土木", 1],["ディベロッパー", 2], ["不動産仲介", 3], ["不動産販売代理", 4], ["不動産管理", 5], ["その他", 6]]%>
                        <%# detail8 = [["コンサルティング", 1],["教育", 2], ["旅行・ホテル", 3], ["人材紹介", 4], ["レジャー施設", 5], ["その他", 6]]%>
                        <%# detail9 = [["広告代理店", 1], ["報道（TV、ラジオ）", 2], ["その他", 3]]%>
                        <%# detail10 = [["通信", 1], ["ソフトウエア開発", 2], ["その他", 3]]%>
                        <%# detail11 = [["官公庁", 1], ["地方公務員", 2], ["その他", 3]]%>


						
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>